<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blankcall">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="127dp"
            android:src="@drawable/profileholder" />

        <TextView
            android:id="@+id/remoteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/hangupButton"
            android:layout_alignRight="@+id/hangupButton"
            android:layout_below="@+id/circleImageView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Remote"
            android:textColor="#53cbe9"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/callState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/circleImageView"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/circleImageView"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="85dp"
            android:text="Ringing"
            android:textAllCaps="true"
            android:textColor="#53cbe9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/callDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hangupButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#40bdea"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/hangupButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:padding="10dp"
            app:srcCompat="@drawable/callred" />
    </RelativeLayout>
</FrameLayout>