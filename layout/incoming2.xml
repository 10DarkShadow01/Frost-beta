             android:layout_marginLeft="13dp"
             android:layout_marginStart="13dp" />-->
        <ImageView
            android:id="@+id/answerButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:padding="10dp"
            app:srcCompat="@drawable/callgreen" />
        <!-- <com.varunest.sparkbutton.SparkButton
             android:id="@+id/answerButton"
             android:layout_width="80dp"
             android:layout_height="80dp"
             app:sparkbutton_activeImage="@drawable/iccall"
             app:sparkbutton_inActiveImage="@drawable/iccallg"
             app:sparkbutton_iconSize="60dp"
             app:sparkbutton_primaryColor="@color/cp"
             app:sparkbutton_secondaryColor="@color/cs"
             android:layout_marginLeft="13dp"
             android:layout_marginStart="13dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />-->
        <ImageView
            android:id="@+id/declineButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            app:srcCompat="@drawable/callred"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp"
            android:layout_alignBottom="@+id/answerButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_above="@+id/declineButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
           />

        <!-- <Button
